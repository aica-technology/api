{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Buttons",
  "description": "A description of interactive buttons in the application graph",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "display_name": {
      "title": "Button Display Name",
      "description": "The human-readable name to display on the button",
      "type": "string"
    },
    "on_click": {
      "title": "On Click",
      "description": "Events that are triggered when the button is pressed",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "load": {
          "$ref": "events/load.schema.json"
        },
        "unload": {
          "$ref": "events/unload.schema.json"
        },
        "service": {
          "$ref": "events/service.schema.json"
        },
        "lifecycle": {
          "$ref": "events/lifecycle.schema.json"
        },
        "load_hardware": {
          "$ref": "events/load_hardware.schema.json"
        },
        "unload_hardware": {
          "$ref": "events/unload_hardware.schema.json"
        },
        "load_controller": {
          "$ref": "events/load_controller.schema.json"
        },
        "unload_controller": {
          "$ref": "events/unload_controller.schema.json"
        },
        "switch_controllers": {
          "$ref": "events/switch_controllers.schema.json"
        }
      }
    },
    "position": {
      "$ref": "common/position.schema.json"
    }
  }
}