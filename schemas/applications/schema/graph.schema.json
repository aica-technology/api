{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Graph",
  "description": "Information for the graphical representation of the application",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "buttons": {
      "$ref": "buttons.schema.json"
    },
    "positions": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "on_start": {
          "$ref": "common/graph_position.schema.json"
        },
        "stop": {
          "$ref": "common/graph_position.schema.json"
        },
        "buttons": {
          "$ref": "common/graph_position_group.schema.json"
        },
        "components": {
          "$ref": "common/graph_position_group.schema.json"
        },
        "hardware": {
          "$ref": "common/graph_position_group.schema.json"
        },
        "conditions": {
          "$ref": "common/graph_position_group.schema.json"
        },
        "sequences": {
          "$ref": "common/graph_position_group.schema.json"
        }
      }
    },
    "edges": {
      "title": "Graph Edges",
      "description": "A description of edges in the application with additional graphical information",
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[a-z]([a-z0-9_]?[a-z0-9])*$": {
          "title": "Graph Edge",
          "description": "Additional graphical information about a specific edge in the application",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "path": {
              "title": "Edge Path",
              "description": "Custom edge path coordinates as x, y pairs",
              "type": "array",
              "items": {
                "$ref": "common/graph_position.schema.json"
              }
            }
          }
        }
      }
    }
  }
}
