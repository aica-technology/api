{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Load",
  "description": "Load a component, hardware interface or controller",
  "oneOf": [
    {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "$ref": "#/$defs/load_object"
      }
    },
    {
      "$ref": "#/$defs/load_object"
    }
  ],
  "$defs": {
    "load_object": {
      "oneOf": [
        {
          "ref": "identifiers/component.schema.json"
        },
        {
          "ref": "identifiers/hardware.schema.json"
        },
        {
          "ref": "identifiers/controller.schema.json"
        }
      ]
    }
  }
}