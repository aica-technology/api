{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Load",
  "description": "Load a component, hardware interface or controller",
  "oneOf": [
    {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "$ref": "#/$defs/load_object"
      }
    },
    {
      "$ref": "#/$defs/load_object"
    }
  ],
  "$defs": {
    "load_object": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "component": {
              "$ref": "identifiers/component.schema.json"
            }
          },
          "required": [
            "component"
          ]
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "hardware": {
              "$ref": "identifiers/hardware.schema.json"
            }
          },
          "required": [
            "hardware"
          ]
        },
        {
          "$ref": "identifiers/controller.schema.json"
        }
      ]
    }
  }
}