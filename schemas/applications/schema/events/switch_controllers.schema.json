{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Switch Controllers",
  "description": "Activate or deactivate controllers on a hardware interface",
  "oneOf": [
    {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "$ref": "#/$defs/switch_controllers_object"
      }
    },
    {
      "$ref": "#/$defs/switch_controllers_object"
    }
  ],
  "$defs": {
    "switch_controllers_object": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "hardware": {
          "$ref": "identifiers/hardware.schema.json"
        },
        "activate": {
          "title": "Activate Controllers",
          "description": "The name(s) of the controller(s) to activate",
          "additionalProperties": false,
          "oneOf": [
            {
              "type": "array",
              "minItems": 1,
              "items": {
                "$ref": "identifiers/controller.schema.json#/properties/controller"
              }
            },
            {
              "$ref": "identifiers/controller.schema.json#/properties/controller"
            }
          ]
        },
        "deactivate": {
          "title": "Deactivate Controllers",
          "description": "The name(s) of the controller(s) to deactivate",
          "additionalProperties": false,
          "oneOf": [
            {
              "type": "array",
              "minItems": 1,
              "items": {
                "$ref": "identifiers/controller.schema.json#/properties/controller"
              }
            },
            {
              "$ref": "identifiers/controller.schema.json#/properties/controller"
            }
          ]
        }
      },
      "allOf": [
        {
          "required": [
            "hardware"
          ],
          "anyOf": [
            {
              "required": [
                "activate"
              ]
            },
            {
              "required": [
                "deactivate"
              ]
            }
          ]
        }
      ]
    }
  }
}