{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Identifier for a variable or a component or controller parameter to assign a value to",
  "oneOf": [
    {
      "title": "Variable Identifier",
      "description": "A variable in the application",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "component": {
          "$ref": "identifier.schema.json"
        },
        "parameter": {
          "$ref": "parameter_identifier.schema.json"
        }
      },
      "required": [
        "component",
        "parameter"
      ]
    },
    {
      "title": "Component Parameter Identifier",
      "description": "A parameter of a component in the application",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "component": {
          "$ref": "identifier.schema.json"
        },
        "parameter": {
          "$ref": "parameter_identifier.schema.json"
        }
      },
      "required": [
        "component",
        "parameter"
      ]
    },
    {
      "title": "Controller Hardware Parameter Identifier",
      "description": "A parameter of a controller in the application",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "controller": {
          "$ref": "identifier.schema.json"
        },
        "hardware": {
          "$ref": "identifier.schema.json"
        },
        "parameter": {
          "$ref": "parameter_identifier.schema.json"
        }
      },
      "required": [
        "controller",
        "hardware",
        "parameter"
      ]
    }
  ]
}
