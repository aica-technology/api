{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Identifier for a variable or a component or controller parameter to assign a value to",
  "oneOf": [
    {
      "target_variable": {
        "additionalProperties": false,
        "properties": {
          "component": {
            "$ref": "identifier.schema.json"
          },
          "parameter": {
            "$ref": "parameter_identifier.schema.json"
          }
        },
        "required": [
          "component",
          "parameter"
        ]
      }
    },
    {
      "target_component": {
        "additionalProperties": false,
        "properties": {
          "component": {
            "$ref": "identifier.schema.json"
          },
          "parameter": {
            "$ref": "parameter_identifier.schema.json"
          }
        },
        "required": [
          "component",
          "parameter"
        ]
      }
    },
    {
      "target_controller": {
        "additionalProperties": false,
        "properties": {
          "controller": {
            "$ref": "identifier.schema.json"
          },
          "hardware": {
            "$ref": "identifier.schema.json"
          },
          "parameter": {
            "$ref": "parameter_identifier.schema.json"
          }
        },
        "required": [
          "controller",
          "hardware",
          "parameter"
        ]
      }
    }
  ]
}
