{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Call Service",
  "description": "Call a service",
  "oneOf": [
    {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "$ref": "#/$defs/service_object"
      }
    },
    {
      "$ref": "#/$defs/service_object"
    },
    {
      "$ref": "../identifier.schema.json"
    }
  ],
  "$defs": {
    "payload": {
      "title": "Service Payload",
      "description": "The payload of the service call, formatted according to the service description",
      "type": [
        "string",
        "object"
      ]
    },
    "service_object": {
      "title": "Call Service Object",
      "oneOf": [
        {
          "title": "Call Component Service Object",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "service": {
              "$ref": "../identifier.schema.json"
            },
            "payload": {
              "$ref": "#/$defs/payload"
            },
            "component": {
              "$ref": "../identifier.schema.json"
            }
          },
          "required": [
            "service"
          ]
        },
        {
          "title": "Call Controller Service Object",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "service": {
              "$ref": "../identifier.schema.json"
            },
            "hardware": {
              "$ref": "../identifier.schema.json"
            },
            "controller": {
              "$ref": "../identifier.schema.json"
            },
            "payload": {
              "$ref": "#/$defs/payload"
            }
          },
          "required": [
            "service",
            "hardware",
            "controller"
          ]
        }
      ]
    }
  }
}