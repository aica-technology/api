{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Set Parameter",
  "description": "Set a parameter on a component",
  "oneOf": [
    {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/set_parameter_object"
      }
    },
    {
      "$ref": "#/$defs/set_parameter_object"
    }
  ],
  "$defs": {
    "parameter": {
      "title": "Parameter Name",
      "description": "The name of a parameter to set",
      "type": "string",
      "pattern": "^[a-zA-Z0-9]([a-zA-Z0-9_.-]?[a-zA-Z0-9])*$"
    },
    "set_parameter_object": {
      "title": "Set Parameter Object",
      "oneOf": [
        {
          "title": "Set Component Parameter Object",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "component": {
              "$ref": "../identifier.schema.json"
            },
            "parameter": {
              "$ref": "#/$defs/parameter"
            },
            "value": {
              "$ref": "../parameters.schema.json#/$defs/parameter_value"
            },
            "type": {
              "$ref": "../parameters.schema.json#/$defs/parameter_type"
            },
            "state_type": {
              "$ref": "../parameters.schema.json#/$defs/parameter_state_type"
            }
          },
          "required": [
            "component",
            "parameter",
            "value"
          ],
          "if": {
            "properties": {
              "type": {
                "const": "state"
              }
            }
          },
          "then": {
            "required": [
              "state_type"
            ]
          }
        },
        {
          "title": "Set Controller Parameter Object",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "controller": {
              "$ref": "../identifier.schema.json"
            },
            "hardware": {
              "$ref": "../identifier.schema.json"
            },
            "parameter": {
              "$ref": "#/$defs/parameter"
            },
            "value": {
              "$ref": "../parameters.schema.json#/$defs/parameter_value"
            },
            "type": {
              "$ref": "../parameters.schema.json#/$defs/parameter_type"
            },
            "state_type": {
              "$ref": "../parameters.schema.json#/$defs/parameter_state_type"
            }
          },
          "required": [
            "controller",
            "hardware",
            "parameter",
            "value"
          ],
          "if": {
            "properties": {
              "type": {
                "const": "state"
              }
            }
          },
          "then": {
            "required": [
              "state_type"
            ]
          }
        }
      ]
    }
  }
}