{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Set Value",
  "description": "Set a value on a variable or a component or controller parameter",
  "oneOf": [
    {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/target"
      }
    },
    {
      "$ref": "#/$defs/target"
    }
  ],
  "$defs": {
    "target": {
      "allOf": [
        {
          "$ref": "../assignment_target.schema.json"
        },
        {
          "title": "Assignment Value",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "value": {
              "$ref": "../parameters.schema.json#/$defs/parameter_value"
            },
            "type": {
              "$ref": "../parameters.schema.json#/$defs/parameter_type"
            },
            "state_type": {
              "$ref": "../parameters.schema.json#/$defs/parameter_state_type"
            }
          },
          "required": [
            "value"
          ]
        }
      ]
    }
  }
}