{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Parameters",
  "description": "A collection of named parameters with assigned values",
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    "^[a-zA-Z0-9]([a-zA-Z0-9_.-]?[a-zA-Z0-9])*$": {
      "oneOf": [
        {
          "$ref": "#/$defs/parameter_value"
        },
        {
          "$ref": "#/$defs/typed_parameter_value"
        },
        {
          "title": "Variable Parameter Value",
          "description": "A reference to a variable",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "variable": {
              "type": "string"
            }
          },
          "required": [
            "variable"
          ]
        }
      ]
    }
  },
  "$defs": {
    "typed_parameter_value": {
      "title": "Typed Parameter Value",
      "description": "An object containing a parameter value and explicit type",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "value": {
          "$ref": "#/$defs/parameter_value"
        },
        "type": {
          "$ref": "#/$defs/parameter_type"
        },
        "state_type": {
          "$ref": "#/$defs/parameter_state_type"
        }
      },
      "required": [
        "value",
        "type"
      ],
      "if": {
        "properties": {
          "type": {
            "const": "state"
          }
        }
      },
      "then": {
        "required": [
          "state_type"
        ]
      }
    },
    "parameter_value": {
      "$ref": "https://raw.githubusercontent.com/aica-technology/api/main/docs/static/schemas/2-0-0/interfaces.schema.json#/$defs/parameter_value"
    },
    "parameter_type": {
      "$ref": "https://raw.githubusercontent.com/aica-technology/api/main/docs/static/schemas/2-0-0/interfaces.schema.json#/$defs/parameter_type"
    },
    "parameter_state_type": {
      "$ref": "https://raw.githubusercontent.com/aica-technology/api/main/docs/static/schemas/2-0-0/interfaces.schema.json#/$defs/encoded_state_type"
    }
  }
}