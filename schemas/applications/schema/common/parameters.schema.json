{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Parameters",
  "description": "A collection of named parameters with assigned values",
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    "^[a-zA-Z0-9]([a-zA-Z0-9_.-]?[a-zA-Z0-9])*$": {
      "oneOf": [
        {
          "$ref": "https://raw.githubusercontent.com/aica-technology/api/main/docs/static/schemas/2-0-1/interfaces.schema.json#/$defs/parameter_value"
        },
        {
          "$ref": "typed_parameter_value.schema.json"
        },
        {
          "title": "Variable Parameter Value",
          "description": "A reference to a variable",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "variable": {
              "type": "string"
            }
          },
          "required": [
            "variable"
          ]
        }
      ]
    }
  }
}